@model IEnumerable<BusLocation.Models.BusStopModels>

@{
    ViewBag.Title = "Przystanki";
}

<h2>BusStops</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitiude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitiude)
        </th>
        <th></th>
    </tr>
@if (Model != null)
{
    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitiude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitiude)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", "BusStop", new { id = item.Id }, null) |
            @Html.ActionLink("Usuń", "Delete", "BusStop", new { id = item.Id }, null)
        </td>
    </tr>
    }
}

</table>

<p>
    @Html.ActionLink("Stwórz przystanek", "Create","BusStop")
</p>
