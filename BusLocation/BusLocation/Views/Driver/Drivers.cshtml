@model IEnumerable<BusLocation.Models.DriverModels>


@{
    ViewBag.Title = "Kierowcy";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nick)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>
    @if ( Model != null)   {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", "Driver", new { id = item.Id }, null) |
                    @Html.ActionLink("Usuń", "Delete", "Driver", new { id = item.Id }, null)
                </td>
            </tr>
      }
    }   
</table>
<p>
    @Html.ActionLink("Dodaj kierowce", "Create", "Driver")
</p>
